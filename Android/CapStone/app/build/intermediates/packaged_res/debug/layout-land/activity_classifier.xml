<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ProgressBar
        android:id="@+id/progressCountdown"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminate="false"
        android:max="60"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintBottom_toTopOf="@+id/itemLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="60"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/metropolis"
        android:includeFontPadding="false"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer">

        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/category_design"
            android:id="@+id/item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="TextView"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/metropolis"
            android:textColor="#FFFFFF"
            android:elevation="10dp"
            android:includeFontPadding="false" />

        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/category_design"
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:text="TextView"
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="@font/metropolis"
            android:textColor="#FFFFFF"
            android:includeFontPadding="false"
            android:elevation="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/category_design"
            android:id="@+id/item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:text="TextView"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/metropolis"
            android:includeFontPadding="false"
            android:textColor="#FFFFFF"
            android:elevation="10dp"/>

        <TextView
            android:background="@drawable/category_design"
            android:id="@+id/item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:text="TextView"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/metropolis"
            android:includeFontPadding="false"
            android:textColor="#FFFFFF"
            android:elevation="10dp"/>

        <TextView
            android:background="@drawable/category_design"
            android:id="@+id/item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:padding="10dp"
            android:text="TextView"
            android:gravity="center"
            android:textSize="40sp"
            android:fontFamily="@font/metropolis"
            android:includeFontPadding="false"
            android:elevation="10dp"
            android:textColor="#FFFFFF"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemLayout"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/box_border">

            <com.management.capstone.drawing.DrawView
                android:id="@+id/drawingView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="#FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/box_border">
            <TextView
                android:id="@+id/resultView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TextView"
                android:textSize="100sp"
                android:fontFamily="@font/metropolis"
                android:includeFontPadding="false"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <android.widget.Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제출하기"
                android:textSize="40sp"
                android:background="@drawable/main_button"
                android:fontFamily="@font/nanum_square"
                android:includeFontPadding="false"/>

            <android.widget.Button
                android:id="@+id/nextStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next"
                android:textSize="40sp"
                android:layout_marginTop="20dp"
                android:background="@drawable/gray_button"
                android:enabled="false"
                android:fontFamily="@font/nanum_square"
                android:textColor="#788685"
                android:includeFontPadding="false"/>

            <android.widget.Button
                android:background="@drawable/main_button"
                android:id="@+id/unDo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="지우기"
                android:textSize="40sp"
                android:fontFamily="@font/nanum_square"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>